{
  "name": "graphql-express",
  "version": "1.0.0",
  "description": "Express App with Graphql",
  "main": "index.js",
  "repository": "https://github.com/ashfaqnisar/Express-Graphql.git",
  "author": "Ashfaqnisar",
  "license": "MIT",
  "scripts": {
    "start": "npm-run-all build server",
    "build": "npm-run-all clean transpile",
    "server": "node ./dist-server/app",
    "dev": "npm-run-all build server",
    "prod": "NODE_ENV=production npm-run-all build server",
    "transpile": "babel server --out-dir ./dist-server",
    "clean": "rimraf dist-server",
    "watch:dev": "nodemon"
  },
  "dependencies": {
    "express": "^4.17.1",
    "express-graphql": "^0.11.0",
    "graphql": "^15.3.0",
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.11.0",
    "@babel/node": "^7.10.5",
    "@babel/plugin-transform-runtime": "^7.11.0",
    "@babel/polyfill": "^7.10.4",
    "@babel/preset-env": "^7.11.0",
    "@babel/runtime": "^7.11.0",
    "@sentry/node": "^5.20.1",
    "axios": "^0.19.2",
    "cors": "^2.8.5",
    "debug": "^4.1.1",
    "dotenv": "^8.2.0",
    "ejs": "^3.1.3",
    "express": "^4.17.1",
    "firebase": "^7.17.1",
    "html-pdf": "^2.2.0",
    "inline-css": "^2.6.3",
    "lodash.get": "^4.4.2",
    "moment": "^2.27.0",
    "morgan": "^1.10.0",
    "npm-run-all": "^4.1.5",
    "razorpay": "^2.0.6",
    "rimraf": "^3.0.2",
    "supports-color": "^7.1.0",
    "uuid": "^8.3.0"
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "eslint": "^7.5.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "nodemon": "^2.0.2",
    "prettier": "^2.0.5"
  },
  "nodemonConfig": {
    "exec": "set DEBUG=app:* & babel-node --inspect=0.0.0.0 server/app.js",
    "watch": [
      "server/*",
      "public/*"
    ],
    "ignore": [
      "**/__tests__/**",
      "*.test.js",
      "*.spec.js"
    ]
  },
  "keywords": [],
  "babel": {
    "presets": [
      "@babel/preset-env"
    ],
    "plugins": [
      [
        "@babel/plugin-transform-runtime",
        {
          "regenerator": true
        }
      ]
    ]
  }
}

